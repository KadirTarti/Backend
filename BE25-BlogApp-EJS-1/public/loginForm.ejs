<%- include('partials/head') %>
<title>AKT BlogApp Anmeldung</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<body>
        <div class="container">
            <%- include('partials/header') %>
        </div>

<!-- main start -->
<main class="container">
    <div class="row g-5">
        <div class="col-md-12 p-3">
            <% if (message) { %>
                <div class="alert alert-warning" role="alert">
                   <%= message %>
               </div>
               <% } %>
            <p>
                <a class="btn btn-sm btn-secondary" href="/">Startseite</a>
            </p>
            <h1>Anmeldung</h1>
            <form action="" method="POST">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>E-Mail</td>
                            <td><input type="text" name="email" required class="form-control" value="abdulkadir@test.com"></td>
                        </tr>
                        <tr>
                            <td>Passwort</td>
    <td> 
        <div class="input-group">
            <input type="password" id="password" name="password" required class="form-control" value="12345678">
            <button type="button" class="btn btn-outline-secondary active" id="togglePassword">
                <i class="fa-solid fa-eye"></i>
            </button>
        </div>
    </td>
                           
                        </tr>
                        <tr>
                            <td></td>
                            <td><label><input type="checkbox" name="remindMe" value="1"> Erinnere mich</label></td>
                        </tr>
                    </tbody>
                </table>
                <p>
                    <button class="btn btn-success" type="submit">Anmelden</button>
                </p>
            </form>
            <div class="text-center">
            <img src="https://img.freepik.com/free-vector/tablet-login-concept-illustration_114360-7863.jpg" class="loginImg h-25" alt="">   
            <style>
                @media (max-width: 768px) {
                  .loginImg {
                    height: 12rem !important;
                  }
                }
              </style>
        </div>

        </div>
    </div>
</main>
<%- include('partials/footer') %>
<!-- main end -->

<script>
    const alertDiv = document.querySelector('.alert')
    if(alertDiv){
        setTimeout(()=>{
            alertDiv.style.display = 'none'
        },4000)
    }

    document.getElementById('togglePassword').addEventListener('click', function () {
        const passwordField = document.getElementById('password');
        const icon = this.querySelector('i');

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash'); 
        } else {
            passwordField.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    });
</script>

</body>
</html>
