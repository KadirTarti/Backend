<%- include('partials/head') %>
<title>AKT BlogApp Anmeldung</title>
</head>
<body>
        <div class="container">
            <%- include('partials/header') %>
        </div>

<!-- main start -->
<main class="container">
    <div class="row g-5">
        <div class="col-md-12 p-3">
            <% if (message) { %>
                <div class="alert alert-warning" role="alert">
                   <%= message %>
               </div>
               <% } %>
            <p>
                <a class="btn btn-sm btn-secondary" href="/">Startseite</a>
            </p>
            <h1>Anmeldung</h1>
            <form action="" method="POST">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <td>E-Mail</td>
                            <td><input type="text" name="email" required class="form-control" value="abdulkadir@test.com"></td>
                        </tr>
                        <tr>
                            <td>Passwort</td>
                            <td><input type="password" name="password" required class="form-control" value="12345678"></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><label><input type="checkbox" name="remindMe" value="1"> Erinnere mich</label></td>
                        </tr>
                    </tbody>
                </table>
                <p>
                    <button class="btn btn-success" type="submit">Anmelden</button>
                </p>
            </form>
            <div class="text-center">
            <img src="https://img.freepik.com/free-vector/tablet-login-concept-illustration_114360-7863.jpg" class="loginImg h-25" alt="">   
            <style>
                @media (max-width: 768px) {
                  .loginImg {
                    height: 12rem !important;
                  }
                }
              </style>
        </div>

        </div>
    </div>
</main>
<%- include('partials/footer') %>
<!-- main end -->

<script>
    const alertDiv = document.querySelector('.alert')
    if(alertDiv){
        setTimeout(()=>{
            alertDiv.style.display = 'none'
        },4000)
    }
</script>

</body>
</html>
