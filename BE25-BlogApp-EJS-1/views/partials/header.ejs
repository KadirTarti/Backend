<header class="border-bottom lh-1 py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
        </div>
        <div class="col-4 text-center position-relative">
            <a class="blog-header-logo text-decoration-none" href="/" style="font-family: 'Raleway', sans-serif; font-size: 2.5rem; font-weight: 700; color: #333; text-shadow: 1px 1px 0px #ccc, 3px 4px 0px #999;">
                AKT BLOG
              </a>

              <style>
                .blog-header-logo {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                }
        
                @media (max-width: 768px) {
                    .blog-header-logo {
                        font-size: 2rem !important;
                        font-weight: 500 !important;
                    }
                }
            </style>
            
                 </div>
        <% if (user.email) { %>
         <div class="col-4 d-flex justify-content-end align-items-center">
            <span class="px-3"><%= user.email %></span>
            <a class="btn btn-sm btn-outline-secondary" href="/logout">Abmelden</a>
        </div>
        <% } else { %>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a class="btn btn-sm btn-outline-secondary" href="/login">Anmelden</a>
        </div>
        <% } %>
    </div>
</header>